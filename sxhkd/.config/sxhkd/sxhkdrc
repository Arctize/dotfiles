# Reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd

# Spawn terminal
super + space
	~/git/st/st

# Run rofi
super + d
	rofi -show run

# Run dmenu
super + shift + d
	dmenu_run

# Volume control
XF86Audio{Raise,Lower}Volume
	amixer -q set Master {4%+,4%-} unmute

XF86AudioMute
	amixer -q set Master toggle

# Brightness control
XF86MonBrightness{Up,Down}
	xbacklight {-inc,-dec} 10


##### BSPWM SPECIFIC ######

# Reload bspwm
super + shift + r
	~/.config/bspwm/bspwmrc

# Quit bspwm
super + shift + e
	bspc quit

# Close/kill focused node
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + f
	bspc desktop -l next

# set the window state {tiled,pseudo_tiled,floating,fullscreen}
super + {y,i,k}
	bspc node -t {pseudo_tiled,tiled,floating}

# focus the node in the given direction
super + {_,shift + }{o,e,period,u}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node
super + {comma,p}
	bspc node -f {next,prev}

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{m,w,v,h,t,n,g,c,r}
	bspc {desktop -f,node -d} '{1-9}'

# preselect the direction
super + ctrl + {o,e,period,u}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# expand the tiled space in the given direction
super + alt + {o,e,period,u}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
super + alt + shift + {o,e,period,u}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# move a floating window
super + {Left,Down,Up,Right}
	xdo move {-x -20,-y +20,-y -20,-x +20}

# focus
~button1
	bspc pointer -g focus

# start move/resize
super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

# end move/resize
super + @button{1-3}
	bspc pointer -u

# Reducing gap on the fly 
super + {minus,plus}
        bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))
